<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.dueeeke.videoplayer.player.VideoView
        android:id="@+id/mVideoView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/mVideoView2"
        app:layout_constraintBottom_toTopOf="@id/mVideoView3"
        />

    <com.dueeeke.videoplayer.player.VideoView
        android:id="@+id/mVideoView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/mVideoView1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/mVideoView1"
        app:layout_constraintBottom_toBottomOf="@id/mVideoView1"
        />

    <com.dueeeke.videoplayer.player.VideoView
        android:id="@+id/mVideoView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/mVideoView4"
        app:layout_constraintTop_toBottomOf="@id/mVideoView1"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.dueeeke.videoplayer.player.VideoView
        android:id="@+id/mVideoView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/mVideoView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/mVideoView3"
        app:layout_constraintBottom_toBottomOf="@id/mVideoView3"
        />

</android.support.constraint.ConstraintLayout>